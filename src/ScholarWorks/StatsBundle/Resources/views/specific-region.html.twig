<div class="formbar">
    <br/>
    <div class="row">
        <form  role="form" action="{{ path('scholar_works_stats_homepage') }}" method="get">

            <div class="col-md-2 col-lg-2">
                <div class="region-control">
                    <label for="region">Region:                    </label>
                        <input id="region"  name="region" type="hidden" class="form-control" value="{{ statistics.region.displayId }}" readonly/><br/>
